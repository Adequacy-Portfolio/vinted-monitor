{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./out",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ]
}
